html(lang='en')
	head
		meta(charset='utf-8')
		title EVO
		meta(name="google-site-verification", content="uoRRDVzTahocqEanaKDKqkO53DKEEuJWbk51K6bVPlA")
		meta(name="twitter:card", content="photo")
		meta(name="twitter:site", content="evo_home")
		meta(name="twitter:creator", content="evo_home")
		-var _title = typeof _title == 'undefined' ? "EVO" : _title;
		-var _img = typeof _img == 'undefined' ? "http://evohome.mv/files/03231b5c07d1072c1c51d1d7afa16d3711f9a91e.jpg" : _img;
		meta(name="twitter:title", content=_title)
		meta(name="twitter:image:src", content=_img)
		meta(name="twitter:domain", content="www.evohome.mv")		
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='')
		meta(name='author', content='')
		link(href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200', rel='stylesheet', type='text/css')
		link(href='/stylesheets/bootstrap.css', rel='stylesheet')
		link(href='/stylesheets/bootstrap-responsive.css', rel='stylesheet')
		link(href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css', rel='stylesheet')
		link(href='//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css', rel='stylesheet')
		link(href='/stylesheets/evo.css', rel='stylesheet')
		// if lt IE 9
			script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
		link(rel='apple-touch-icon-precomposed', sizes='144x144', href='assets/ico/apple-touch-icon-144-precomposed.png')
		link(rel='apple-touch-icon-precomposed', sizes='114x114', href='assets/ico/apple-touch-icon-114-precomposed.png')
		link(rel='apple-touch-icon-precomposed', sizes='72x72', href='assets/ico/apple-touch-icon-72-precomposed.png')
		link(rel='apple-touch-icon-precomposed', href='assets/ico/apple-touch-icon-57-precomposed.png')
		script(src='/javascripts/jquery.js')
		script(src='/javascripts/bootstrap.js')
		script(src='/javascripts/website.js')
		style ul.breadcrumb li {text-transform:capitalize}
	body
		div.container.navbar-wrapper
			div.navbar.navbar-inverse
				div.navbar-inner
					a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.brand(href='/')
						img(src="/images/logo.png", style='width:83px', alt='EVO Home')
					div.nav-collapse.collapse
						ul.nav
							li(style='line-height: 27px;')
								a(href='/products') Products
							-for(var menu in menus.menus){
								li.dropdown(style='line-height: 27px;')
									a.dropdown-toggle(href='#', data-toggle='dropdown')=menus.menus[menu].name
										b.caret(style='margin-top: 13px;')
									ul.dropdown-menu
										-each sub in menus.menus[menu].subcats
											li
												a(href=sub.url)=sub.name
										li.divider
										li
											a(href= menus.menus[menu].url) All products
							-}
		div#contents!=body
		footer.container
			div.row
				div#social-icons-span.span5
					p Like us, follow us & subscribe to our newsletter to get the latest updates
					ul#social-icons.unstyled
						li
							a(href='https://www.facebook.com/evohome.mv') 
								span.icon-facebook.icon-2x
						li
							a(href='https://twitter.com/evo_home')
								span.icon-twitter.icon-2x
						li
							input(type='text', placeholder='enter your email to subscribe...')
							button(type='submit') join
				div.span2
					-console.log(menus.footer.columns);
					-var column = menus.footer.columns && menus.footer.columns.column1 ? menus.footer.columns.column1 : "";
					h5=column
					ul.unstyled
						-each page in menus.footer.column1
							li
								a(href='/customer-relations/' + page.name.replace(/ /g, '-').toLowerCase())=page.name

				div.span2
					-var column = menus.footer.columns && menus.footer.columns.column2 ? menus.footer.columns.column2 : "";
					h5=column
					ul.unstyled
						-each page in menus.footer.column2
							li
								a(href='/about/' + page.name.replace(/ /g, '-').toLowerCase())=page.name
				div.span2
					-var column = menus.footer.columns && menus.footer.columns.column3 ? menus.footer.columns.column3 : "";
					h5=column
					ul.unstyled
						-each page in menus.footer.column3
							li
								a(href='/working/' + page.name.replace(/ /g, '-').toLowerCase())=page.name
			div#copyright.row
				p.pull-right
					a(href='#top') Back to top
				p
					| © 2013 EVOHOME · 
					a(href='#') Privacy 
					| · 
					a(href='#') Terms

