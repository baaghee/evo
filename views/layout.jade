		script(src='/javascripts/bootstrap.js')
		script(src='/javascripts/website.js')
		style ul.breadcrumb li {text-transform:capitalize}
	body
		div.container.navbar-wrapper
			div.navbar.navbar-inverse
				div.navbar-inner
					a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.brand(href='/') EVO
					div.nav-collapse.collapse
						ul.nav
							li.active
								a(href='/products') Products
							-for(var menu in app.menus){
								li.dropdown
									a.dropdown-toggle(href='#', data-toggle='dropdown')=app.menus[menu].name
										b.caret
									ul.dropdown-menu
										-each sub in app.menus[menu].subcats
											li
												a(href=sub.url)=sub.name
										li.divider
										li
											a(href=app.menus[menu].url) All products
							-}
		div#contents!=body
		hr.featurette-divider
		footer
			div.row
				div.span3
					h5 EVO Catalogue
					ul.unstyled
						li
							a(href='#') Watch us on YouTube
						li
